from turtle import *

tracer(0)

left(градус)     / lt(градус)
right(градус)    / rt(градус)

forward(пиксели) / fd(пиксели)
backward(пиксели) / bd(пиксели)

goto(x, y) # ПЕРЕМЕЩЕНИЕ ПО КООРДИНАМ В ТОЧКУ (X, Y)
dot(3, "red") # СТАВИТ ТОЧКУ

penup()  - ПОДНЯТЬ ХВОСТ
pendown() - ОПУСТИТЬ ХВОСТ

update()
done() # ОЖИДАНИЕ ЗАКРЫТИЯ ПРОГРАММЫ